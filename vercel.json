{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm install -g pnpm && pnpm install && pnpm --filter @chefcloud/web build",
  "devCommand": "pnpm --filter @chefcloud/web dev",
  "installCommand": "npm install -g pnpm && pnpm install",
  "framework": "nextjs",
  "outputDirectory": "apps/web/.next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://chefcloud-api-production.up.railway.app/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "https://chefcloud-api-production.up.railway.app"
  }
}
